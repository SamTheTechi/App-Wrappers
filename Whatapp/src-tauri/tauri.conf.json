{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WhatsApp",
  "version": "0.1.0",
  "identifier": "com.asuna.whatsapp",
  "build": {
    "devUrl": "https://web.whatsapp.com",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WhatsApp",
        "width": 1280,
        "height": 800,
        "url": "https://web.whatsapp.com",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
